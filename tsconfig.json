{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"skipLibCheck": true,
		"rootDir": ".",
		"outDir": "dist"
	},
	"include": ["src", "tests"],
	"exclude": ["dist", "coverage", "jest.config.js"]
}
